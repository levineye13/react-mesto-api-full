{
  "extends": "airbnb-base",
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "next"
      }
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["_id"]
      }
    ],
    "no-useless-escape": "off",
    "no-unused-expressions": [
      "error",
      {
        "allowTernary": true
      }
    ]
  }
}